<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="logImpl" value="LOG4J" />
		<setting name="jdbcTypeForNull" value="NULL" />	<!-- 파라메터 타입으로 가져온 값이 널을 가지고 있을때 널익셉션을 뿌리는게 아니라 그냥 그값에는 널을 집어넣겠다는 뜻 -->
	</settings>

	<typeAliases>
		<typeAlias type="world.festival.VO.UserVO" alias="UserVO" />
		<typeAlias type="world.festival.VO.ListVO" alias="ListVO" />
		<typeAlias type="world.festival.VO.MapVO" alias="MapVO" />
		<typeAlias type="world.festival.VO.ReplyVO" alias="ReplyVO" />
		<typeAlias type="world.festival.VO.WishVO" alias="WishVO" />
	</typeAliases>
	<mappers>
		<mapper resource="mapper/UserMapper.xml" />
		<mapper resource="mapper/ListMapper.xml" />
		<mapper resource="mapper/MapMapper.xml" />
		<mapper resource="mapper/ReplyMapper.xml" />
		<mapper resource="mapper/WishMapper.xml" />
		<mapper resource="mapper/CalendarMapper.xml" />
	</mappers> 
</configuration>
